<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="logPath">./log</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}(%F:%L) - %m%n" />
        </Console>

        <RollingFile name="front" fileName="${logPath}/front.log"
                     filePattern="${logPath}/front.log.%d{yyyy-MM-dd}.%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}(%L) - %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="200 MB" />
            </Policies>
            <DefaultRolloverStrategy max="24" >
                <Delete basePath="${logPath}/" >
                    <IfFileName glob="front.log.*.log.gz" />
                    <IfLastModified age="15d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="error" fileName="${logPath}/front-error.log"
                     filePattern="${logPath}/front-error.log.%d{yyyy-MM-dd}.%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}(%L) - %m%n" />
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="200 MB" />
            </Policies>
            <DefaultRolloverStrategy max="24" >
                <Delete basePath="${logPath}/" >
                    <IfFileName glob="front-error.log.*.log.gz" />
                    <IfLastModified age="15d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <Async name="asyncFront" bufferSize="512">
            <AppenderRef ref="front" />
        </Async>

        <Async name="asyncError" bufferSize="512">
            <AppenderRef ref="error" />
        </Async>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="asyncFront" />
            <AppenderRef ref="asyncError" />
        </Root>
    </Loggers>
</Configuration>